{% extends "AlfitraCptBundle::layout.html.twig" %}
{% block body %}
	    <div class="container">
    <h1>Liste des dons</h1>
<h3>{% if is_granted("ROLE_USER") %}
    Hello {{ app.user.username }}
{% endif %}</h3>
    <div class="pull-right">
        <a href="{{ path('formulaire_new') }}" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Ajouter un don</a>
    </div>
    <div class="container">
    
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Civilité</th>
                <th>Nom et Prénom</th>
                <th>Montant</th>
                <th>Mode</th>
                <th>Reçu fiscal</th>
                <th>Téléphone</th>
                <th>Posté par</th>
            </tr>
        </thead>
        <tbody>
        {% for donateur in donateurs %}
            <tr>
                {# <td><a href="{{ path('collecteur_show', { 'id': collecteur.id }) }}">{{ collecteur.id }}</a></td> #}
                <td>{{ donateur.civilite }}</td>
                <td>{{ donateur.nom }} {{ donateur.prenom }}</td>
                <td>{{ donateur.montant }}</td>
                <td>{{ donateur.modePaiement }}</td>
                <td>{{ donateur.recuFiscal }}</td>
                <td>{{ donateur.telephone }}</td>
                <td>{{ donateur.postedBy }}</td>
                {# <td>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('formulaire_show', { 'id': collecteur.id }) }}">voir</a>
                        </li>
                        <li>
                            <a href="{{ path('formulaire_edit', { 'id': collecteur.id }) }}">modifier</a>
                        </li>
                    </ul>
                </td> #}
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('alfitra_dashboard') }}" class="btn btn-warning">Revenir au dashboard</a>
    </div>
</div>
{% endblock %}